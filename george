    <!-- Confetti Script -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        // --- LOGIC ---
        const output = document.getElementById('console-output');
        const terminal = document.getElementById('terminal');
        const interaction = document.getElementById('interaction');
        const yesBtn = document.getElementById('yes-btn');
        const noBtn = document.getElementById('no-btn');
        const ticketWrapper = document.getElementById('ticket-wrapper');
        const scanlines = document.getElementById('scanlines');

        // Boot Sequence (Hacker Text)
        const bootSequence = [
            { text: "‚ö† CRITICAL SYSTEM FAILURE ‚ö†", color: "red", delay: 100 },
            { text: "Unauthorized access detected in sector: HEART_MONITOR...", delay: 1000 },
            { text: "Firewall breached by user: GEORGE...", delay: 2000 },
            { text: "Calculating compatibility...", delay: 3000 },
            { text: "> Deleting loneliness... [OK]", delay: 4000 },
            { text: "> Uploading butterflies.dll... [OK]", delay: 5000 },
            { text: "> Installing LOVE.exe...", delay: 6000 },
            { text: "üíñ INSTALLATION COMPLETE üíñ", color: "#ff69b4", delay: 7500 }
        ];

        async function typeLine(text, color) {
            const p = document.createElement('p');
            if(color) p.style.color = color;
            output.appendChild(p);
            
            const cursor = document.createElement('span');
            cursor.className = 'cursor';
            p.appendChild(cursor);

            // Typing speed (slightly faster for better flow)
            for (let i = 0; i < text.length; i++) {
                p.insertBefore(document.createTextNode(text[i]), cursor);
                await new Promise(r => setTimeout(r, 35)); 
            }
            p.removeChild(cursor);
        }

        async function startBoot() {
            // Wait a tiny bit just to ensure DOM is ready, then go
            await new Promise(r => setTimeout(r, 100));
            
            for (let line of bootSequence) {
                // If there's a delay defined, wait.
                await new Promise(r => setTimeout(r, line.delay - (line.prevDelay || 0)));
                await typeLine(line.text, line.color);
                
                // Keep scrolling down
                window.scrollTo(0, document.body.scrollHeight);
            }
            // Show buttons
            interaction.style.display = 'block';
            window.scrollTo(0, document.body.scrollHeight);
        }

        // Start immediately
        startBoot();

        // Dodge Button Logic (The "No" button runs away)
        noBtn.addEventListener('mouseover', () => {
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);
            noBtn.style.position = 'fixed';
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        });

        // ACCEPT Logic
        yesBtn.addEventListener('click', () => {
            // 1. Remove Hacker Vibes
            terminal.style.display = 'none';
            scanlines.style.display = 'none';
            
            // 2. Change Background to Cute Gradient
            document.body.style.background = "linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%)";
            
            // 3. Show Ticket
            ticketWrapper.style.display = 'block';

            // 4. Create Floating Hearts Background
            createFloatingHearts();

            // 5. Confetti Explosion
            confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 }, colors: ['#ff69b4', '#ff1493', '#fff'] });
        });

        function createFloatingHearts() {
            for(let i=0; i<20; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§';
                heart.className = 'bg-heart';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = Math.random() * 5 + 5 + 's';
                heart.style.fontSize = Math.random() * 30 + 10 + 'px';
                document.body.appendChild(heart);
            }
        }
    </script>
